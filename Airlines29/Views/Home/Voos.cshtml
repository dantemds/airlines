
@model List<VoosModel>
@{
    ViewData["Title"] = "Home Page";
   
}

<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <style>

        .table, thead {
            text-align: center;
            border-collapse: collapse;
            border: 2px solid black;
        }

        .text-center {
            border: 1px solid black;
        }

        tr {
            height: 40px;
        }

        td {
            border: 1px solid black;
        }

        tbody tr:hover {
            cursor: pointer;
            background-color: rgb(190, 190, 190);
        }
    </style>
</head>
<body >
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <h2>ToNine AirLines</h2>
                <div class="card">
                    <div class="card-header">Voos Disponíveis</div>
                    <div class="card-body">
                        <table class="table table-hover" id="tableVoos">
                            <thead>
                                <tr>
                                    <th scope="col" class="text-center" style="width:30vw">Origem</th>
                                    <th scope="col" class="text-center" style="width:30vw">Destino</th>
                                    <th scope="col" class="text-center" style="width:20vw">Horário</th>
                                    <th scope="col" class="text-center" style="width:20vw">Valor</th>
                                    <th scope="col" class="text-center" style="width:20vw"></th>
                                </tr>
                            </thead>

                            <tbody id="tBodyVoos">
                                @if (Model != null && Model.Any())
                                {
                                    foreach (var item in Model)
                                    {
                                        
                                <tr>
                                    
                                    <td>
                                        @item.Origem
                                    </td>
                                    <td>
                                        @item.Destino
                                    </td>
                                    <td>
                                        @item.Horario
                                    </td>

                                    <td>
                                        @item.Preco
                                    </td>
                                    <td>
                                        <a role="button" asp-controller="Home" asp-action="Assentos" asp-route-id="@item.Id">Ver Assentos</a>
                                    </td>
                                </tr>
                                        

                                    }
                                }
                            </tbody>
                        </table>

                        <p id="result"></p>

                    </div>

                </div>
            </div>
        </div>
    </div>

</body>
</html>
